#! /bin/bash

file="$HOME/.local/share/unhide"
app="$1"

tid=$(xdo id)

hidecurrent() {
	echo $tid+$app >>$file &
	xdo hide
}

showlast() {
	sid=$(grep "$app" $file | awk -F "+" 'END{print $1}')
	xdo show -r $sid
}

if [ "$#" -ne 1 ]; then
	echo "Illegal number of parameters"
else
	hidecurrent &	"$@" showlast
fi

