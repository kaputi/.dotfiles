#!/bin/bash

# QUICK_EDITOR='emacsclient -c -a emacs'
QUICK_EDITOR="kitty $HOME/.local/bin/towervim"

declare -a options=(
# "alacritty - $HOME/.config/alacritty/alacritty.yml"
"awesome - $HOME/.config/awesome/rc.lua"
# "bash - $HOME/.bashrc"
# "bat - $HOME/.config/bat/config"
# "deadd - $HOME/.config/deadd/deadd.conf"
# "doom emacs - $HOME/.doom.d/README.org"
# "i3 - $HOME/.config/i3/config"
# "neovim - $HOME/.config/nvim/README.org"
"picom - $HOME/.config/picom.conf"
# "polybar - $HOME/.config/polybar/config"
# "profile - $HOME/.profile"
"ranger - $HOME/.config/ranger/rc.conf"
# "xmobar - $HOME/.config/xmobar/xmobarrc0"
# "xmonad - $HOME/.xmonad/README.org"
"zsh - $HOME/.config/zsh/.zshrc"
)

# Piping the above array into dmenu.
# We use "printf '%s\n'" to format the array one item to a line.
choice=$(printf '%s\n' "${options[@]}" | dmenu -i -l 20 -p 'Edit config:')

# What to do when/if we choose a file to edit.
if [ "$choice" ]; then
	cfg=$(printf '%s\n' "${choice}" | awk '{print $NF}')
	$QUICK_EDITOR "$cfg"

# What to do if we just escape without choosing anything.
else
		echo "Program terminated." && exit 0
fi

